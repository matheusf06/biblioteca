<%- include('../partials/Header.ejs') %>
<div class="container">
   <div class="row">
      <div class="col">
         <h1>Cadastrar Livro</h1>
         <form method="post">
            <div class="mb-3">
               <label class="form-label">Titulo:</label>
               <input type="text" class="form-control" placeholder="Informe titulo" name="titulo" required>
            </div>
            <div class="mb-3">
               <label class="form-label">Autor:</label>
               <input type="text" class="form-control" placeholder="Informe o nome do autor" name="autor" required>
            </div>
            <div class="mb-3">
               <label class="form-label">Série:</label>
               <input type="text" class="form-control" placeholder="Informe a série que o livro pertence" name="serie" required>
            </div>
            <div class="d-grid gap-2">
               <button type="submit" class="btn btn-dark">Salvar</button>
               <a type="button" class="btn btn-light" href="/">Cancelar</a>
            </div>
         </form>
      </div>
   </div>
</div>
<%- include('../partials/Footer.ejs') %>